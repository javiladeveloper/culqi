{
  "compilerOptions": {
    "esModuleInterop": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "lib": ["es2019"],
    "target": "es2019",
    "outDir": "dist",
    "module": "CommonJS"
  },
  "include": ["./**/*.ts", "./dist/*.ts", "./test/*.ts"]
}
